{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "IdentityServiceUrl" : "http://4.147.1.243",

  "ClientApp" : "https://carsbidi.onrender.com",


  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",       
          "Methods":["Get"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/auctions/{**catch-all}"          
          }
        ]
      },
      "auctionsWrite" : {
        "ClusterId": "auctions",        
        "AuthorizationPolicy":"Default",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods":["POST","PUT","DELETE"]          
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/auctions/{**catch-all}"          
          }
        ]
      },
      "search" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}" ,
          "Methods": ["GET"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/search/{**catch-all}"          
          }
        ]
      },
      "bidsWrite":{
        "ClusterId": "bids",
        "AuthorizationPolicy":"Default",
        "Match": {
          "Path": "/bids/{**catch-all}" ,
          "Methods": ["POST"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/bids/{**catch-all}"          
          }
        ]
      },
      "bidsRead":{
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}" ,
          "Methods": ["GET"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/bids/{**catch-all}"          
          }
        ]
      },
      "notifications":{
        "ClusterId": "notifications",
        "CorsPolicy":"customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"          
        }       
      }
    },
  

  
  "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://4.147.63.246"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://4.237.13.136"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidApi": {
            "Address": "http://20.213.174.149"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://20.213.2.248"
          }
        }
      }
    }
  }
}

